{
  // General VS Code Options
  "editor.experimental.preferTreeSitter.css": true,
  "editor.experimental.preferTreeSitter.typescript": false,
  "editor.mouseWheelZoom": true,
  "telemetry.editStats.enabled": false,
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "off",
  "update.showReleaseNotes": false,

  // Autosave
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2000,

  // Coding and Writing Options
  "editor.autoIndentOnPaste": true,
  "editor.detectIndentation": false,
  "editor.folding": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  // Formatters
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Programming Language Related
  // Python Programming Language Specific Settings
  "[python]": {
    // Python Formatter
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // Appearance
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 12,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,

  "explorer.confirmDelete": false,

  "vim.highlightedyank.color": "rgba(229, 85, 97, 1)",
  "vim.highlightedyank.duration": 100,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "rgba(85, 229, 217, 1)",

  "window.restoreWindows": "preserve",
  "window.title": "",

  "workbench.colorTheme": "Neovim Theme",
  "workbench.editor.showTabs": "multiple",
  "workbench.iconTheme": "hypernym-icons",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  // Terminal Settings
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": false,

  // Vim Emulation Settings
  "vim.leader": " ",
  "vim.smartcase": false,
  "vim.useSystemClipboard": true,

  "vim.normalModeKeyBindingsNonRecursive": [
    // save and close
    {
      "before": ["leader", "q"],
      "commands": [
        "workbench.action.files.save",
        "workbench.action.closeActiveEditor"
      ]
    },
    // close without saving
    {
      "before": ["leader", "Q"],
      "commands": ["workbench.action.revertAndCloseActiveEditor"]
    },
    // open a new empty tab
    {
      "before": ["t", "e"],
      "commands": ["workbench.action.files.newUntitledFile"]
    },
    // move the next tab
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    // move the previous tab
    {
      "before": ["<s-tab>"],
      "commands": ["workbench.action.previousEditor"]
    },
    // toggle file explorer
    {
      "before": ["leader", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    // telescope
    // find files
    {
      "before": ["leader", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    // "live grep" / search
    {
      "before": ["leader", "f", "l"],
      "commands": ["workbench.action.findInFiles"]
    }
  ],

  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-h>"],
      "after": ["<Left>"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<Right>"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Down>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Up>"]
    }
  ]
}

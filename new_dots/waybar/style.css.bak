@import "themes/deepspace.css";

* {
    all: initial;
    border: none;
    border-radius: 0px;
    font-family: "JetBrainsMono Nerd Font Propo";
    font-size: 14px;
    min-height: 0;
    margin: 0;
    padding: 0;
}

window#waybar {
    background-color: transparent;
}

.modules-center {
    background-color: @background;
    padding: 4px 6px;
    border-radius: 6px;
}

#workspaces {
    background: @translucent;
    padding: 4px 2px;
    margin: 0 10px 0 10px;
    border: none;
    border-radius: 6px;
    box-shadow: none;
}

#workspaces button {
    padding: 0 4px;
    margin: 0 6px;
    border-radius: 6px;
    min-width: 20px;
    color: @color0;
    background: transparent;
    transition: all 0.1s ease-in-out;
}

#workspaces button.active {
    background: @cursor;
    color: @foreground;
    min-width: 20px;
    transition: all 0.1s ease-in-out;
}

#workspaces button:hover {
    background: @cursor;
    color: @foreground;
    min-width: 20px;
}

#workspaces button.urgent {
    background-color: @color1;
    color: @foreground;
    min-width: 20px;
}

#custom-distro,
#clock,
#pulseaudio,
#network,
#power-profiles-daemon,
#cpu,
#memory,
#temperature,
#backlight,
#battery,
#menu,
#pulseaudio-slider,
#tray {
    background-color: @translucent;
    padding: 0 8px;
    margin: 0 5px;
    border: none;
    border-radius: 6px;
    box-shadow: none;
}

#custom-distro {
    color: @color12;
}

tooltip {
    background-color: @background;
    border: 1px solid @selection-foreground;
    padding: 10px;
    border-radius: 6px;
}

tooltip label {
    color: @foreground;
    padding: 4px;
}

menu {
    background-color: @background;
    color: @foreground;
    padding: 8px;
    border: 2px solid @foreground;
    border-radius: 6px;
}

menuitem {
    padding: 2px 8px;
}

menuitem:hover {
    background-color: @selection-foreground;
}

/* Group styling for unified appearance */
#group-audio {
    background-color: @translucent;
    padding: 0 8px;
    margin: 0 5px;
    border: none;
    border-radius: 6px;
    box-shadow: none;
}

#group-audio:hover {
    background-color: @translucent;
}

#pulseaudio {
    padding: 0 8px;
    margin: 0;
    border: none;
    border-radius: 0; /* Remove individual border radius to unify with slider */
}

#pulseaudio-slider {
    margin: 0;
    padding: 0 8px;
    border: none;
    border-radius: 0; /* Remove individual border radius to unify with icon */
}

#pulseaudio-slider slider {
    min-height: 0px;
    min-width: 0px;
    opacity: 0;
    background-image: none;
    border: none;
    box-shadow: none;
}

#pulseaudio-slider trough {
    min-height: 10px;
    min-width: 80px;
    border-radius: 2px;
    background: rgba(255, 255, 255, 0.2);
}

#pulseaudio-slider highlight {
    min-width: 10px;
    border-radius: 2px;
    background: white;
}